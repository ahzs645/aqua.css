    <h2 id="table">Table View</h2>
    <p class="label">Alternating row colors: <span class="inline-code">--table-row-odd</span> and <span class="inline-code">--table-row-even</span></p>

    <div class="era-pre-10-4">
      <%- example(`
        <table class="aqua-tree-table unified-header" tabindex="0" data-tree-table style="width: 100%; max-width: 700px;">
          <thead>
            <tr>
              <th class="active" data-sort-dir="asc" style="width: 200px;">Name <span class="sort-arrow asc"></span></th>
              <th>Date Modified</th>
              <th>Size</th>
              <th>Kind</th>
            </tr>
          </thead>
          <tbody>
            <tr class="selected" data-id="documents-pre">
              <td>
                <div class="aqua-tree-cell">
                  <span class="aqua-tree-table-arrow expanded" data-toggle="documents-pre" role="button" tabindex="0" aria-label="Toggle Documents"></span>
                  <span>Documents</span>
                </div>
              </td>
              <td>Dec 10, 2024</td>
              <td>--</td>
              <td>Folder</td>
            </tr>
            <tr data-parent="documents-pre">
              <td>
                <div class="aqua-tree-cell">
                  <span class="aqua-tree-table-indent"></span>
                  <span class="aqua-tree-table-arrow leaf"></span>
                  <span>report.pdf</span>
                </div>
              </td>
              <td>Dec 9, 2024</td>
              <td>2.4 MB</td>
              <td>PDF Document</td>
            </tr>
            <tr data-parent="documents-pre">
              <td>
                <div class="aqua-tree-cell">
                  <span class="aqua-tree-table-indent"></span>
                  <span class="aqua-tree-table-arrow leaf"></span>
                  <span>notes.txt</span>
                </div>
              </td>
              <td>Dec 8, 2024</td>
              <td>12 KB</td>
              <td>Text File</td>
            </tr>
            <tr data-id="pictures-pre">
              <td>
                <div class="aqua-tree-cell">
                  <span class="aqua-tree-table-arrow" data-toggle="pictures-pre" role="button" tabindex="0" aria-label="Toggle Pictures"></span>
                  <span>Pictures</span>
                </div>
              </td>
              <td>Dec 7, 2024</td>
              <td>--</td>
              <td>Folder</td>
            </tr>
            <tr data-parent="pictures-pre" style="display: none;">
              <td>
                <div class="aqua-tree-cell">
                  <span class="aqua-tree-table-indent"></span>
                  <span class="aqua-tree-table-arrow leaf"></span>
                  <span>photo.jpg</span>
                </div>
              </td>
              <td>Dec 6, 2024</td>
              <td>3.2 MB</td>
              <td>JPEG Image</td>
            </tr>
          </tbody>
        </table>
      `) %>
    </div>

